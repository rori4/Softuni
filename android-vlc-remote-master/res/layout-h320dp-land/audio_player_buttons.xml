<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">
        
        <ImageButton
            android:id="@+id/button_navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/actionBarItemBackground"
            style="?android:attr/actionButtonStyle"
            android:onClick="onClick"
            android:src="@drawable/ic_navigation_off" />

        <ImageButton
            android:id="@+id/playlist_button_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/actionBarItemBackground"
            style="?android:attr/actionButtonStyle"
            android:contentDescription="@string/playlist_repeat"
            android:src="@drawable/ic_mp_repeat_off_btn" />

        <ImageButton
            android:id="@+id/playlist_button_shuffle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/actionBarItemBackground"
            style="?android:attr/actionButtonStyle"
            android:contentDescription="@string/playlist_shuffle"
            android:src="@drawable/ic_mp_shuffle_off_btn" />

        <ImageButton
            android:id="@+id/menu_action_button_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/actionBarItemBackground"
            style="?android:attr/actionButtonStyle" />
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/audio_player_buttons_second_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">
        
        <ImageButton
            android:id="@+id/menu_action_button_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/actionBarItemBackground"
            style="?android:attr/actionButtonStyle" />

        <ImageButton
            android:id="@+id/menu_action_button_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/actionBarItemBackground"
            style="?android:attr/actionButtonStyle" />

        <ImageButton
            android:id="@+id/menu_action_button_fourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/actionBarItemBackground"
            style="?android:attr/actionButtonStyle" />

        <ImageButton
            android:id="@+id/menu_action_button_fifth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/actionBarItemBackground"
            style="?android:attr/actionButtonStyle" />
        
    </LinearLayout>

</LinearLayout>